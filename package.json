{
  "name": "stx",
  "version": "0.1.2",
  "description": "a blazing fast state manager with network sync out of the box",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup src/index.js --o dist/index.js --f cjs",
    "budo": "budo test/index.js",
    "cover": "istanbul cover --report none --print detail test",
    "dev": "nodemon test/index.js | tap-difflet",
    "pretest": "npm run build",
    "test": "node test/index.js | tap-difflet && standard",
    "travis": "npm run build && npm run cover -s && istanbul report lcov && (cat coverage/lcov.info | coveralls) && standard",
    "watch": "nodemon src/index.js -x 'rollup --o dist/index.js --f cjs' --ignore dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mstdokumaci/stx"
  },
  "author": "Mustafa Dokumacı <mustafa@foraa.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mstdokumaci/stx/issues"
  },
  "homepage": "https://github.com/mstdokumaci/stx#readme",
  "keywords": [
    "reactive",
    "state",
    "observable",
    "sync",
    "websocket"
  ],
  "contributors": [
    "Mustafa Dokumacı <mustafa@foraa.com>"
  ],
  "dependencies": {},
  "devDependencies": {
    "budo": "^10.0.0",
    "rollup": "latest",
    "coveralls": "^3.0.0",
    "istanbul": "latest",
    "nodemon": "^1.0.0",
    "standard": "^10.0.0",
    "tap-difflet": "latest",
    "tape": "^4.0.0"
  }
}
